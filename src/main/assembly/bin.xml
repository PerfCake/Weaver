<assembly>
   <id>bin</id>
   <formats>
      <format>tar.gz</format>
      <format>tar.bz2</format>
      <format>zip</format>
   </formats>
   <dependencySets>
      <dependencySet>
         <useProjectArtifact>false</useProjectArtifact>
         <outputDirectory>lib</outputDirectory>
         <unpack>false</unpack>
      </dependencySet>
   </dependencySets>
   <fileSets>
      <fileSet>
         <includes>
            <include>README*</include>
            <include>LICENSE*</include>
         </includes>
      </fileSet>
      <fileSet>
         <directory>${project.build.directory}</directory>
         <outputDirectory>lib</outputDirectory>
         <includes>
            <include>*.jar</include>
         </includes>
         <excludes>
            <exclude>*javadoc.jar</exclude>
            <exclude>*sources.jar</exclude>
         </excludes>
         <fileMode>0644</fileMode>
      </fileSet>
      <fileSet>
         <directory>${basedir}/lib/ext</directory>
         <outputDirectory>lib/ext</outputDirectory>
         <includes>
            <include>*.jar</include>
            <include>README*</include>
         </includes>
         <fileMode>0644</fileMode>
      </fileSet>
      <fileSet>
         <directory>${basedir}/lib/plugins</directory>
         <outputDirectory>lib/plugins</outputDirectory>
         <includes>
            <include>*.jar</include>
            <include>README*</include>
         </includes>
         <fileMode>0644</fileMode>
      </fileSet>
      <fileSet>
         <directory>${basedir}/src/main/resources</directory>
         <outputDirectory>resources</outputDirectory>
         <includes>
            <include>keystores/*</include>
            <include>messages/*</include>
            <include>scenarios/*</include>
            <include>schemas/*</include>
            <include>google-charts/*</include>
            <include>xslt/*</include>
         </includes>
         <fileMode>0644</fileMode>
      </fileSet>
      <fileSet>
         <directory>${basedir}/src/main/resources</directory>
         <outputDirectory/>
         <includes>
            <include>log4j2.xml</include>
         </includes>
         <fileMode>0644</fileMode>
      </fileSet>
      <fileSet>
         <directory>${project.build.directory}</directory>
         <outputDirectory>docs</outputDirectory>
         <includes>
            <include>*javadoc.jar</include>
         </includes>
      </fileSet>
      <fileSet>
         <directory>${project.build.scriptSourceDirectory}</directory>
         <outputDirectory>bin</outputDirectory>
         <includes>
            <include>*.bat</include>
         </includes>
         <fileMode>0644</fileMode>
      </fileSet>
      <fileSet>
         <directory>${project.build.scriptSourceDirectory}</directory>
         <outputDirectory>bin</outputDirectory>
         <includes>
            <include>*.sh</include>
         </includes>
         <fileMode>0755</fileMode>
      </fileSet>
   </fileSets>
</assembly>
